create database eCommerceWebsite;
use eCommerceWebsite;
create table customers(
customerID int primary key auto_increment,
customerName varchar(50),
customerEmail varchar(100),
AccountCreatedAt datetime
);
insert into customers(customerName,customerEmail,AccountCreatedAt)
values
("John Doe"," johndoe@example.com",now()),
("Jane Smith","janesmith@example.com",now()),
("Robert Brown","robertbrown@example.com",now()),
("Emily Davis","emilydavis@example.com",now()),
("Michael Johnson","michaeljohnson@example.com",now());

update customers
set customerEmail="johndoe@example.com"
where customerName="John Doe";

select * from customers;
insert into customers(customerName,customerEmail,AccountCreatedAt)
value
("Sophia Taylor","sophiataylor@example.com",now());

create table products(
productID int primary key auto_increment,
productName varchar(50),
price decimal(7,2),
stockQuantity int
);

alter table products
auto_increment=200;

insert into products(productName,price,stockQuantity)
value
("Chicken Maggi",1600.55,150);



alter table products 
add column productCategories varchar(50);


update products
set productCategories="Fast Food"
where productName="Chicken Maggi";



create table categories(
categoryID int primary key auto_increment,
categoryName varchar(50)
);

insert into categories(categoryName)
value
("Fast Food");


select * from categories;


create table orders(
orderID int primary key auto_increment,
customerID int,
orderDate datetime,
orderStatus varchar(50),
foreign key (customerID) references customers(customerID)
);


insert into orders(orderDate,orderStatus)
value
("2025-03-19 12:09:44","Placed");

-- delete from orders where orderID=1; 

select * from orders;
select * from customers;


create table OrderItems(
ItemsOrderedID int primary key auto_increment,
orderID int,
productID int,
quantity int,
totalPrice decimal(10,2),
foreign key (orderID) references orders(orderID) on delete cascade,
foreign key (productID) references products(productID) on delete cascade
);


insert into OrderItems(quantity,totalPrice)
value
(2,500);

select * from OrderItems;
select * from products;



