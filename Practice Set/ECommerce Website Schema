create database eCommerceWebsite;
use eCommerceWebsite;
create table customers(
customerID int primary key auto_increment,
customerName varchar(50),
customerEmail varchar(100),
AccountCreatedAt datetime
);
insert into customers(customerName,customerEmail,AccountCreatedAt)
values
("John Doe"," johndoe@example.com",now()),
("Jane Smith","janesmith@example.com",now()),
("Robert Brown","robertbrown@example.com",now()),
("Emily Davis","emilydavis@example.com",now()),
("Michael Johnson","michaeljohnson@example.com",now());


select * from customers;
insert into customers(customerName,customerEmail,AccountCreatedAt)
value
("Sophia Taylor","sophiataylor@example.com",now());

create table products(
productID int primary key auto_increment,
productName varchar(50),
price decimal(7,2),
stockQuantity int
);

alter table products
auto_increment=200;

insert into products(productName,price,stockQuantity)
value
("Chicken Maggi",1600.55,150);

select * from products;


create table categories(
categoryID int primary key auto_increment,
categoryName varchar(50)
);

insert into categories(categoryName)
value
("Fast Food");


select * from categories;
